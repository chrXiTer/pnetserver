{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/run.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "8080"
            ]
        }
    ]
}